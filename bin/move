#!/usr/bin/env ruby

require_relative '../lib/move.rb'
puts "Welcome Dad, to my Tic Tac Toe game!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Where would you like to go?"
input = gets.strip
input_to_index (input)
index = input.to_i-1
move(board, index, player = "X")
display_board(board)
